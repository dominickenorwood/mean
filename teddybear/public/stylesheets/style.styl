@import 'nib'
@import url('fonts.css')
@import url('../bootstrap/css/bootstrap.min.css')

background-color = #ccc

body
  padding 20px
  font 14px

a
  color #00b7ff

h1
  font-family 'TonduBeta'

.col-md-2
  div
    background-color #ccc
    padding 20px
    margin-bottom 20px
    border-radius 5px

span
  display block

header
  text-align center
  h1
    font-size 80px

footer
  text-align center
  background-color #000
  padding 20px 0
  color #FFF
  margin-top 50px

.row
  margin 20px 0

nav
  background-color #000
  ul 
    width 980px
    margin 0 auto
  li
    display inline-block
    a
      display block
      padding 10px 20px
      &:hover
        color #F00

.comic-form
  width 600px
  margin 0 auto
  padding 10px 20px 20px 20px
  box-shadow 0 0 10px rgba(0, 0, 0, 0.7)
  border solid 1px #CCC

button.btn
  margin-top 20px
  margin-right 20px
  font-size 20px
  padding 10px 30px

input 
  border solid 1px #CCC
  padding 10px
  width 100%
  border-radius 10px
  margin-bottom 10px

label
  padding-bottom 5px
  font-size 14px

textarea
  border solid 1px #CCC
  width 100%
  padding 10px
  height 100px

ul
  margin 0
  padding 0
  li
    margin 0 0 5px 0
    padding 0
    list-style none
    span
      display inline
      font-weight bold

.col-md-9
  h2
    border-top solid 1px #CCC
    font-weight bold
    padding-top 20px

form
  a
    display block
    padding 20px 0

.progress
  margin-top 10px